<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weatherapi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/GlobalTextInputStyle</item>
        <item name="android:textViewStyle">@style/GlobalTextViewStyle</item>
    </style>

    <style name="SplashActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/sky_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="GlobalTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minWidth">@dimen/big_width</item>
    </style>


    <style name="GlobalTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WeatherIconImageView">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WeatherDetailsTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextView.Weather">
        <item name="android:layout_marginTop">@dimen/low_space</item>
    </style>

    <style name="HintTextView.Air">
    </style>

    <style name="ValueTextView">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ValueTextView.Weather">
        <item name="android:layout_marginTop">@dimen/low_space</item>
    </style>

    <style name="ValueTextView.Air">
        <item name="android:layout_marginStart">@dimen/low_space</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/test_air_concentration</item>
    </style>

    <style name="ValueTextView.AirQuality">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/test_air_quality</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layout_bg_weather</item>
        <item name="android:padding">@dimen/medium_space</item>
        <item name="android:layout_marginTop">@dimen/low_space</item>
        <item name="android:layout_marginStart">@dimen/low_space</item>
        <item name="android:layout_marginBottom">@dimen/low_space</item>
        <item name="android:layout_marginEnd">@dimen/low_space</item>
    </style>

</resources>