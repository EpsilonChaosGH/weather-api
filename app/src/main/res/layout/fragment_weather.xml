<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weather_background"
    android:fillViewport="true"
    tools:context=".app.screens.main.weather.WeatherFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/contentStart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/medium_space" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/contentEnd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/medium_space" />

        <TextView
            android:id="@+id/cityNameTextView"
            style="@style/TitleTextView"
            android:layout_width="260dp"
            android:layout_marginTop="@dimen/large_space"
            android:text="@string/current_city"
            app:layout_constraintEnd_toEndOf="@id/contentEnd"
            app:layout_constraintStart_toStartOf="@id/contentStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageButton
            android:id="@+id/searchImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/medium_space"
            android:background="@drawable/layout_bg"
            android:src="@drawable/ic_baseline_search"
            app:layout_constraintBottom_toBottomOf="@+id/cityNameTextView"
            app:layout_constraintEnd_toStartOf="@+id/contentEnd"
            app:layout_constraintTop_toTopOf="@+id/cityNameTextView" />

        <TextView
            android:id="@+id/countryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_space"
            android:text="RU"
            app:layout_constraintStart_toStartOf="@id/contentStart"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weatherContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_space"
            android:background="@drawable/layout_bg"
            app:layout_constraintEnd_toEndOf="@id/contentEnd"
            app:layout_constraintStart_toStartOf="@id/contentStart"
            app:layout_constraintTop_toBottomOf="@id/cityNameTextView">

            <TextView
                android:id="@+id/temperatureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_test"
                android:textSize="64sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/weatherImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temperatureUnitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/temperatureTextView"
                app:layout_constraintTop_toTopOf="@+id/temperatureTextView" />

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="@dimen/medium_space"
                android:src="@drawable/ic_baseline_wb_sunny"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/currentWeatherTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:lines="1"
                android:text="@string/current_weather"
                app:layout_constraintEnd_toEndOf="@id/weatherImageView"
                app:layout_constraintTop_toBottomOf="@+id/weatherImageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailsWeatherContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_space"
            android:background="@drawable/layout_bg"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="@id/contentEnd"
            app:layout_constraintStart_toStartOf="@id/contentStart"
            app:layout_constraintTop_toBottomOf="@id/weatherContainer">


            <TextView
                android:id="@+id/feelsLikeHintTextView"
                style="@style/WeatherHintTextView"
                android:text="@string/feels_like"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/humidityHintTextView"
                style="@style/WeatherHintTextView"
                android:text="@string/humidity"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/feelsLikeHintTextView" />

            <TextView
                android:id="@+id/pressureHintTextView"
                style="@style/WeatherHintTextView"
                android:text="@string/pressure"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/humidityHintTextView" />

            <TextView
                android:id="@+id/windSpeedHintTextView"
                style="@style/WeatherHintTextView"
                android:text="@string/wind_speed"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pressureHintTextView" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/startBarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="feelsLikeHintTextView, humidityHintTextView, pressureHintTextView, windSpeedHintTextView" />

            <TextView
                android:id="@+id/feelsLikeTextView"
                style="@style/WeatherValueTextView"
                app:layout_constraintStart_toStartOf="@id/startBarrier"
                app:layout_constraintTop_toTopOf="@id/feelsLikeHintTextView"
                tools:text="-11.2" />

            <TextView
                android:id="@+id/humidityTextView"
                style="@style/WeatherValueTextView"
                app:layout_constraintStart_toStartOf="@id/startBarrier"
                app:layout_constraintTop_toTopOf="@id/humidityHintTextView"
                tools:text="77" />

            <TextView
                android:id="@+id/pressureTextView"
                style="@style/WeatherValueTextView"
                app:layout_constraintStart_toStartOf="@id/startBarrier"
                app:layout_constraintTop_toTopOf="@id/pressureHintTextView"
                tools:text="1001" />

            <TextView
                android:id="@+id/windSpeedTextView"
                style="@style/WeatherValueTextView"
                app:layout_constraintStart_toStartOf="@id/startBarrier"
                app:layout_constraintTop_toTopOf="@id/windSpeedHintTextView"
                tools:text="2.9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_space"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/contentEnd"
            app:layout_constraintStart_toStartOf="@+id/contentStart"
            app:layout_constraintTop_toBottomOf="@+id/detailsWeatherContainer" />

        <ImageButton
            android:id="@+id/locationImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/medium_space"
            android:layout_marginEnd="@dimen/medium_space"
            android:background="@drawable/layout_bg"
            android:src="@drawable/ic_baseline_my_location"
            app:layout_constraintEnd_toStartOf="@+id/contentEnd"
            app:layout_constraintTop_toBottomOf="@+id/detailsWeatherContainer" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>